<!DOCTYPE html>
<html lang="es-ES">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @{
        if (string.IsNullOrEmpty((string?)ViewData["Title"]))
        {
            <title>Alejandro Estornell | Desarrollador de software con 5 años de experiencia especializado en .NET</title>
        }
        else
        {
            <title>@ViewData["Title"] | Alejandro Estornell</title>
        }
    }
    <partial name="_Favicons" />
    <script type="importmap"></script>
    <link rel="preconnect" href="https://fonts.bunny.net">
    <link href="https://fonts.bunny.net/css?family=inter:300,300i,400,400i,500,500i,600,600i,700,700i,800,800i"
        rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/modern-normalize@3.0.1/modern-normalize.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Aaesalamanca.RazorPages.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="nav-header">
            @{
                var currentPage = ViewContext.ActionDescriptor?.RouteValues["page"];
            }
            <a class="nav-header-link @(currentPage == "/Index" ? "nav-header-link-active" : "")" asp-area=""
                asp-page="/Index">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                    stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"
                    class="icon icon-tabler icons-tabler-outline icon-tabler-home">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                    <path d="M5 12l-2 0l9 -9l9 9l-2 0" />
                    <path d="M5 12v7a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-7" />
                    <path d="M9 21v-6a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v6" />
                </svg>
                Inicio
            </a>
            <a class="nav-header-link @(currentPage == "/Proyectos" ? "nav-header-link-active" : "")" asp-area=""
                asp-page="/Proyectos">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                    stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"
                    class="icon icon-tabler icons-tabler-outline icon-tabler-code">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                    <path d="M7 8l-4 4l4 4" />
                    <path d="M17 8l4 4l-4 4" />
                    <path d="M14 4l-4 16" />
                </svg>
                Proyectos
            </a>
            <a class="nav-header-link @(currentPage == "/SobreMi" ? "nav-header-link-active" : "")" asp-area=""
                asp-page="/SobreMi">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                    stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"
                    class="icon icon-tabler icons-tabler-outline icon-tabler-user">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                    <path d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0" />
                    <path d="M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2" />
                </svg>
                Sobre Mí
            </a>
        </nav>
    </header>
    <main>
        @RenderBody()
    </main>
    <footer>
        <p><small>© 2025</small> <strong>aaesalamanca</strong></p>
        <p><small>
                Artículos: <a href="https://creativecommons.org/licenses/by-nc-sa/4.0" target="_blank"
                    rel="noopener noreferrer">CC BY-NC-SA 4.0</a> | Código fuente: <a
                    href="https://raw.githubusercontent.com/aaesalamanca/aaesalamanca.dev/refs/heads/main/LICENSE"
                    target="_blank" rel="noopener noreferrer">MIT License</a></small>
        </p>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
</body>

</html>
