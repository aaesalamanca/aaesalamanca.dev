<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @{
        if (string.IsNullOrEmpty((string?)ViewData["Title"]))
        {
            <title>Alejandro Estornell - Desarrollador de software con 5 años de experiencia especializado en .NET</title>
        }
        else
        {
            <title>@ViewData["Title"] - Alejandro Estornell</title>
        }
    }
    <partial name="_Favicons" />
    <script type="importmap"></script>
    <link rel="preconnect" href="https://fonts.bunny.net">
    <link href="https://fonts.bunny.net/css?family=inter:300,300i,400,400i,700,700i" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/modern-normalize@3.0.1/modern-normalize.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Aaesalamanca.RazorPages.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="nav_header">
            @{
                var currentPage = ViewContext.ActionDescriptor?.RouteValues["page"];
            }
            <a class="nav_header--link @(currentPage == "/Index" ? "nav_header--link--active" : "")" asp-area=""
                asp-page="/Index">Inicio</a>
            <a class="nav_header--link @(currentPage == "/Proyectos" ? "nav_header--link--active" : "")" asp-area=""
                asp-page="/Proyectos">Proyectos</a>
            <a class="nav_header--link @(currentPage == "/SobreMi" ? "nav_header--link--active" : "")" asp-area=""
                asp-page="/SobreMi">Sobre Mí</a>
        </nav>
    </header>
    <main>
        @RenderBody()
    </main>

    <script src="~/js/site.js" asp-append-version="true"></script>
</body>

</html>
