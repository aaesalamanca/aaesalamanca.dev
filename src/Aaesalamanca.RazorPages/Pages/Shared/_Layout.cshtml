<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @{
        if (string.IsNullOrEmpty((string?)ViewData["Title"]))
        {
            <title>Alejandro Estornell</title>
        }
        else
        {
            <title>@ViewData["Title"] - Alejandro Estornell</title>
        }
    }
    <script type="importmap"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@picocss/pico@2/css/pico.min.css"
        integrity="sha384-X38yfunGUhNzHpBaEBsWLO+A0HDYOQi8ufWDkZ0k9e0eXz/tH3II7uKZ9msv++Ls" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.bunny.net">
    <link href="https://fonts.bunny.net/css?family=inter:400,400i,700,700i" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/modern-normalize@3.0.1/modern-normalize.min.css"
        integrity="sha384-uo/9/s/Ns8DTg4kjkjex8GezUcgMlKD99gTqxvMkIsaG4lSUbeJ0dVELljipv94t" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Aaesalamanca.RazorPages.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <a asp-area="" asp-page="/Index">Alejandro Estornell</a>
        <a asp-area="" asp-page="/SobreMi">Sobre Mí</a>
        <a asp-area="" asp-page="/Contacto">Contacto</a>
    </header>
    <main role="main">
        @RenderBody()
    </main>

    <script src="~/js/site.js" asp-append-version="true"></script>
</body>

</html>
